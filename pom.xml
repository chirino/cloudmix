    <cloudmix.osgi.version>version=${project.version}</cloudmix.osgi.version>
    <cloudmix.osgi.split.pkg>-split-package:=first</cloudmix.osgi.split.pkg>
    <cloudmix.osgi.import>${cloudmix.osgi.import.pkg}</cloudmix.osgi.import>
    <cloudmix.osgi.symbolic.name>${artifactId}</cloudmix.osgi.symbolic.name>
    <cloudmix.osgi.embed.dependency />
    <cloudmix.osgi.embed.transitive>false</cloudmix.osgi.embed.transitive>
    <cloudmix.osgi.embed.directory />
    <cloudmix.osgi.unpack.bundle>false</cloudmix.osgi.unpack.bundle>
    <cloudmix.osgi._exportcontents>*</cloudmix.osgi._exportcontents>
  </properties>

