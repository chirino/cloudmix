  body
    #navigation
      .wrapper
        ul
          li.webgen-menu-level1
            a( href="/" ) Home
          li.webgen-menu-level1
            a( href="/profiles" title="A profile is like an environment such as development or production" ) Profiles
          li.webgen-menu-level1
            a( href="/features" ) Features
          li.webgen-menu-level1
            a( href="/agents" ) Agents
          li.webgen-menu-level1
            a( href="/api" ) API
          li.webgen-menu-level1.webgen-menu-submenu
            a( href="http://cloudmix.fusesource.org/" ) Documentation
          li.webgen-menu-level1
            a( href="http://cloudmix.fusesource.org/support.html" ) Support
    #overview
      .wrapper
        .logo
        .message
          a( href="/" )
            h1 CloudMix Controller
          | controls one or more clouds of software
    #content
      .wrapper
        !~~ body
