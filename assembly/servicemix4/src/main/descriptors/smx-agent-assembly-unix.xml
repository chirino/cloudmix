<assembly>
    <id>unix-bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/unix/apache-servicemix-kernel-${smx4-version}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>target/unix/apache-servicemix-kernel-${smx4-version}/bin/*</exclude>
            </excludes>
        </fileSet>
    	<fileSet>
            <directory>target/unix/apache-servicemix-kernel-${smx4-version}/bin</directory>
            <outputDirectory>/bin/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <fileMode>755</fileMode>
            <lineEnding>unix</lineEnding>
      	</fileSet>     
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/deploy</outputDirectory>
            <includes>
                <include>org.apache.servicemix.grid.agent-bundle-${project.version}.jar</include>
            </includes>
            <fileMode>664</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/etc</outputDirectory>
            <includes>
                <include>org.apache.servicemix.grid.agent.cfg</include>
            </includes>
            <fileMode>664</fileMode>
        </fileSet>
    </fileSets>
</assembly>
